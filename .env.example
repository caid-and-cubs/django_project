# Configuration pour AI Image Generator
# Copiez ce fichier vers .env et remplissez les valeurs

# Django Configuration
SECRET_KEY=your-super-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=image_generator.settings_production

# Database Configuration (PostgreSQL recommandé pour production)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Cloudinary Configuration (pour les fichiers media)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Redis Configuration (optionnel, pour le cache)
REDIS_URL=redis://localhost:6379/0

# AI Generation Configuration
ENABLE_AI_GENERATION=false
# Note: Stable Diffusion peut ne pas fonctionner sur Vercel à cause des limitations de mémoire

# Email Configuration (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security Configuration
ALLOWED_HOSTS=your-domain.vercel.app,localhost,127.0.0.1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.vercel.app